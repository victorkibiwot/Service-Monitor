<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>Transaction Monitor</title>

  <!-- Styles -->
  <link rel="stylesheet" href="/css/global.css"/>
  <link rel="stylesheet" href="/css/dash.css"/>
  <link rel="stylesheet" href="/css/transactions.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- Theme detection -->
  <script>
    const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    document.documentElement.classList.toggle('dark-mode', theme === 'dark');
    document.documentElement.setAttribute('data-theme-initial', theme);
  </script>
</head>
<body>
  <%- include('navbar', { currentPage: 'transactions' }) %>
  <div class="sidebar-overlay"></div>
  <div id="main" class="main-content">
        <div class="container page-wrapper">
        <h2 class="page-title mb-1">Transactions</h2>
        <div id="txnToggle" class="d-flex align-items-center gap-2 mb-4">
            <button class="txn-btn active" data-type="main">Main</button>
            <div class="env-divider"></div>
            <button class="txn-btn" data-type="b2c">B2C</button>
            <div class="env-divider"></div>
            <button class="txn-btn" data-type="c2b">C2B</button>
            <div class="env-divider"></div>
            <button class="txn-btn" data-type="esb">ESB</button>
        </div>

        <!-- Status Summary Card -->
        <div class="card mb-4 text-center border shadow-sm">
        <div class="card-body">
            <span id="statusBadge" class="badge bg-secondary fs-5 px-3 py-2 mb-3 d-inline-block">
              <i class="bi bi-hourglass-split me-1"></i> Loading...
            </span>

            <div class="metrics-box px-3 py-2 rounded">
            <p class="mb-1 text-muted small" id="dailyTransactions">Daily transactions: <span id="dailyTransactionsValue">--</span></p>
            <p class="mb-1 text-muted small" id="latestSequence">Latest sequence: --</p>
            <p class="mb-0 text-muted small" id="latestUpdated">Last updated: --</p>
            </div>
        </div>
        </div>

        <!-- Activity Chart Card -->
        <div class="card border shadow-sm">
        <div class="card-header bg-activity-header border-bottom">
            <h5 class="mb-0">Activity (Last Half-hour)</h5>
        </div>
        <div class="card-body">
            <canvas id="transactionChart" height="90"></canvas>
        </div>
        </div>

        <%- include('footer') %>
        </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/utils.js"></script>
  <script src="/js/global.js"></script>
  <script src="/js/transactions.js"></script>
</body>
</html>
